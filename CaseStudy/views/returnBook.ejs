<!DOCTYPE html>
<html lang="en">

<head>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script type="text/javascript">
        const returnbooks = async (id) => {
            await $.ajax({
                url: "http://localhost:3000/borrow/returnBookStudent",
                type: "POST",
                data: JSON.stringify({ "id": id }),
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    console.log(xhr.status);
                    console.log(thrownError);
                }
            })
        }

    </script>
</head>

<body>
    <div class="page-heading">
        <h1>Borrow a book</h1>
    </div>
    <form action="/borrow/returnBook" method="POST" enctype="multipart/form-data">
        <% for (const borrow of borrowed){ %>
            <table class=”control-group”>
                <tr class="form-group floating-label-form-group controls">
                    <td><label>Student Name</label></td>
                    <td>
                        <p>
                            <%= borrow.nameStudent %>
                        </p>
                    </td>
                </tr>
                <tr class="form-group floating-label-form-group controls">
                    <td><label>Student ID</label></td>
                    <td>
                        <p>
                            <%= borrow.studentID %>
                        </p>
                    </td>
                </tr>
                <tr>
                    <td><label>Quantity Borrow</label></td>
                    <td>
                    <td>
                        <p>
                            <%= borrow.quantity_borrow %>
                        </p>
                    </td>
                    </td>
                </tr>
                <tr class="form-group floating-label-form-group controls">
                    <td><label>Borrow Date</label></td>
                    <td>
                    <td>
                        <p>
                            <%= borrow.borrowDate %>
                        </p>
                    </td>
                    </td>
                </tr>
                <tr>
                    <button onclick="returnbooks('<%= borrow.id %>')">RETURNING</button>
                    <!-- <button onclick="">DELETE</button> -->
                </tr>
            </table>
            <% } %>
    </form>
</body>